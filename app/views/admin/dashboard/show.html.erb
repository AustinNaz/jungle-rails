<section>

<header class="page-header">
  <h1>Admin &raquo; Dashboard</h1>
</header>

<div class="panel panel-default products">
  <%# raise @category %>
  <table class="table table-striped table-bordered table-dark">
  <thead class="thead-dark">
  <tr>
  <th>Categories</th>
  <% @category.each do |item| %>
    <th> <%= link_to item.name, category_path(item.id) %> </th>
  <% end %>
  <th>Total</th>
  </tr>
  </thead>
  <tr>
  <th>Quantity</th>
  <% total = 0 %>
  <% @category.each do |item| %>
    <td> <%= link_to item.products.count, admin_products_path %> </td>
    <% total += item.products.count %>
  <% end %>
  <td> <%= total %> </td>
  </tr>
  <tr>
  </table>

</div>

</section>